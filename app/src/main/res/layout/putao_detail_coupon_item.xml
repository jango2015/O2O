<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/putao_yp_detail_customs_height"
    android:background="@drawable/putao_yp_listitem_seclector"
    android:paddingLeft="@dimen/putao_yp_item_left_padding"
    android:paddingRight="@dimen/putao_yp_item_right_padding" >

    <!-- <LinearLayout -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="@dimen/putao_yp_detail_customs_height" -->
    <!-- android:background="@drawable/yp_detail_item_seclector" -->
    <!-- android:orientation="horizontal" -->
    <!-- android:paddingLeft="@dimen/putao_yp_item_left_padding" -->
    <!-- android:paddingRight="@dimen/putao_yp_item_right_padding" > -->

    <LinearLayout
        android:id="@+id/coupon_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/tuan_info_img"
            android:layout_width="@dimen/putao_yp_detail_customs_img_width"
            android:layout_height="@dimen/putao_yp_detail_customs_img_height"
            android:scaleType="fitXY"
            android:src="@drawable/putao_icon_logo_placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tuan_title"
                style="@style/putao_w_w"
                android:layout_weight="3"
                android:singleLine="true"
                android:textColor="@color/putao_black"
                android:textSize="@dimen/putao_yp_detail_item_first_text_size" />

            <TextView
                android:id="@+id/tuan_info"
                style="@style/putao_w_w"
                android:layout_marginTop="3dp"
                android:layout_weight="5"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#ff7a7a7a"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="3dp"
                android:layout_weight="6"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tuan_current_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:singleLine="true"
                    android:textColor="#ffffaa00"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tuan_last_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/putao_light_black"
                    android:textSize="10dp" />
             </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- </LinearLayout> -->
    <TextView
        android:id="@+id/coupon_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/coupon_region"
        android:layout_alignBottom="@+id/coupon_region"
        android:layout_marginRight="5dp"
        android:textColor="@color/putao_light_black"
        android:textSize="12dp" />
    <TextView
        android:id="@+id/coupon_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/coupon_info"
        android:layout_marginBottom="12dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/putao_light_black"
        android:textSize="12dp" />
    <View
        android:id="@+id/divider_line"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/putao_divider_line_size"
        android:layout_alignParentBottom="true"
        android:background="@color/putao_yellow_page_line_color" />

</RelativeLayout>