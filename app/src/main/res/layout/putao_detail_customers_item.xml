<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/putao_List_THREE_ITEM_Style" 
    android:background="@drawable/putao_yp_listitem_seclector">

    <!-- <ImageView
        android:id="@+id/head_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/putao_icon_data_tuan" /> -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tuan_info_img"
            android:layout_width="@dimen/putao_yp_detail_customs_img_width"
            android:layout_height="@dimen/putao_yp_detail_customs_img_height"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/putao_icon_logo_placeholder" 
            android:contentDescription="@string/putao_about_us"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tuan_title"
                style="@style/putao_List_SIGNLE_ITEM_PRIMARY_TEXT_STYLE"
                android:layout_weight="3"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/tuan_info"
                style="@style/putao_List_SIGNLE_ITEM_SECOND_TEXT_STYLE"
                android:layout_marginTop="3dp"
                android:layout_weight="5"
                android:ellipsize="end"
                android:maxLines="2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="3dp"
                android:layout_weight="6"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tuan_current_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:singleLine="true"
                    android:textColor="#ffffaa00"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <so.contacts.hub.widget.SlashTextView
                    android:id="@+id/tuan_last_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/putao_light_black"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- </LinearLayout> -->

    <View
        android:id="@+id/divider_line"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/putao_divider_line_size"
        android:layout_alignParentBottom="true"
        android:background="@color/putao_yellow_page_line_color" />

</RelativeLayout>