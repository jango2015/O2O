<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/putao_bg_yellow_item_single"
    android:minHeight="@dimen/putao_listview_multirow_item_height" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentTop="true"
        android:layout_margin="11dp"
        android:contentDescription="@string/putao_about_us"
        android:scaleType="centerInside"
        android:src="@drawable/putao_a0000" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/putao_message_center_item_margin"
        android:layout_marginRight="@dimen/putao_message_center_item_margin"
        android:layout_marginTop="@dimen/putao_message_center_item_margin" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/putao_message_center_item_margin"
        android:layout_toEndOf="@id/logo"
        android:layout_toLeftOf="@id/time"
        android:layout_toRightOf="@id/logo"
        android:layout_toStartOf="@id/time"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/subject"
            style="@style/putao_List_Two_ITEM_PRIMARY_TEXT_STYLE"
            android:gravity="bottom" />

        <TextView
            android:id="@+id/digest"
            style="@style/putao_List_Two_ITEM_SECOND_TEXT_STYLE"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/putao_message_center_item_margin" />
    </LinearLayout>

</RelativeLayout>