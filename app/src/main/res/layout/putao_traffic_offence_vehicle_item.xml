<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/putao_List_SINGLE_ITEM_Style"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/putao_info_btn_width"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/province_code"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/putao_info_btn_width"
			android:textSize="@dimen/putao_express_result_no_data_info_text_size"
			android:textColor="#0d0d0d"
			android:gravity="center_vertical"
			android:paddingRight="@dimen/putao_popwin_listview_item_leftrightpadding"
             />

        <TextView
            android:id="@+id/car_num"
             android:layout_width="wrap_content"
            android:layout_height="@dimen/putao_info_btn_width"
			android:textSize="@dimen/putao_express_result_no_data_info_text_size"
			android:textColor="#0d0d0d"
			android:gravity="center_vertical"
			android:paddingLeft="@dimen/putao_popwin_listview_item_leftrightpadding"
			android:paddingRight="@dimen/putao_popwin_listview_item_leftrightpadding" />

        <TextView
            android:id="@+id/location"
            android:layout_width="0dp"
            android:layout_height="@dimen/putao_info_btn_width"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/putao_listview_item_imgcontentgap"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center_vertical|right" 
            android:textSize="@dimen/putao_express_result_no_data_info_text_size"
            android:paddingLeft="@dimen/putao_popwin_listview_item_leftrightpadding"
			android:paddingRight="@dimen/putao_popwin_listview_item_leftrightpadding"/>

        <CheckBox
            android:id="@+id/multi_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
			android:paddingLeft="@dimen/putao_popwin_listview_item_leftrightpadding"
             />
    </LinearLayout>

    <View style="@style/putao_DividerStyle" />

</LinearLayout>