<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/putao_my_order_item_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/depart_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上海虹桥"
                android:textColor="#ff0d0d0d"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/depart_station_py"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shanghai Hongqiao"
                android:textColor="#ff616161"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/depart_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="12月23日"
                android:textColor="#ff616161"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/depart_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:23"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/putao_a0108" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/arrive_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="桂林北"
                android:textColor="#ff0d0d0d"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/arrive_station_py"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guilin Bei"
                android:textColor="#ff616161"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/arrive_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="12月24日"
                android:textColor="#ff616161"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/arrive_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:30"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
      <include layout="@layout/putao_my_order_item_foot" />

</LinearLayout>