<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/putao_header_view" />
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/tag_view"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
         >
        <LinearLayout
        android:id="@+id/tag_view_ll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
         >
        <RelativeLayout
        android:id="@+id/tag_view_one"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
         >
        <ImageView
            android:id="@+id/tag_img_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tag_text_one"
            android:src="@drawable/putao_icon_payment_water" >
        </ImageView> 
        <TextView
            android:id="@+id/tag_text_one"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/putao_common_tag_title_text_size"
            android:textColor="@color/putao_pt_deep_gray"
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="缴水费"
            >
        </TextView>
        </RelativeLayout>
        <ImageView
            android:id="@+id/tag_middle_line"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@color/putao_pt_line_gray" >
        </ImageView>
        <RelativeLayout
        android:id="@+id/tag_view_two"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
         >
        <ImageView
            android:id="@+id/tag_img_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tag_text_two"
            android:src="@drawable/putao_icon_payment_electricity" >
        </ImageView> 
        <TextView
            android:id="@+id/tag_text_two"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/putao_common_tag_title_text_size"
            android:textColor="@color/putao_pt_deep_gray"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:text="缴电费"
            >
        </TextView>
        </RelativeLayout>
        <ImageView
            android:id="@+id/tag_middle_line2"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@color/putao_pt_line_gray" >
        </ImageView>
        <RelativeLayout
        android:id="@+id/tag_view_three"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
         >
        <ImageView
            android:id="@+id/tag_img_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/putao_icon_payment_gas" >
        </ImageView> 
        <TextView
            android:id="@+id/tag_text_three"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/tag_img_three"
            android:textSize="@dimen/putao_common_tag_title_text_size"
            android:textColor="@color/putao_pt_deep_gray"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="缴煤气"
            >
        </TextView>
        </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    
    <ImageView 
            android:layout_height="1dp"
            android:layout_width="fill_parent"
            android:background="@color/putao_pt_line_gray"
            android:visibility="gone"
        />

</LinearLayout>