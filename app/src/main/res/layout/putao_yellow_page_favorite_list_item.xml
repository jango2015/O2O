<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    style="@style/putao_List_SINGLE_ITEM_Style" 
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="@dimen/putao_listview_multirow_item_imgsize"
        android:layout_height="@dimen/putao_listview_multirow_item_imgsize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/putao_about_us"
        android:scaleType="center" />

    <RelativeLayout
        android:id="@+id/item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/putao_listview_item_imgcontentgap"
        android:layout_marginStart="@dimen/putao_listview_item_imgcontentgap"
        android:layout_toLeftOf="@+id/delete_parent_layout"
        android:layout_toRightOf="@id/item_img"
        android:layout_toStartOf="@+id/delete_parent_layout" >

        <TextView
            android:id="@+id/name"
            style="@style/putao_List_SIGNLE_ITEM_PRIMARY_TEXT_STYLE"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/region"
            style="@style/putao_List_SIGNLE_ITEM_SECOND_TEXT_STYLE"
            android:layout_below="@+id/name"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/delete_parent_layout"
        android:layout_width="@dimen/putao_listview_item_imgsize"
        android:layout_height="@dimen/putao_listview_item_imgsize"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone" >

        <CheckBox
            android:id="@+id/express_history_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:clickable="false" />
    </RelativeLayout>

</RelativeLayout>