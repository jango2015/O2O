<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:splitMotionEvents="false" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/putao_hotelpay_cardinfo_hint"
            android:textColor="@color/putao_text_color_second"
            android:textSize="@dimen/putao_tag_group_text_size" />

        <include
            android:layout_width="fill_parent"
            android:layout_height="@dimen/putao_divider_line_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            layout="@layout/putao_line_view_divide" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hotel_pay_bank_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/putao_hotle_item_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="@string/putao_hotelpay_bank"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hotel_pay_bank_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/putao_hotelpay_bank_hint"
            android:textColor="@color/putao_text_color_second_alpha"
            android:textSize="16sp" />
    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="@dimen/putao_divider_line_size"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        layout="@layout/putao_line_view_divide" />

    <LinearLayout
        android:id="@+id/hotel_pay_cardnum_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/putao_hotle_item_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="@string/putao_hotelpay_cardnum"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/hotel_pay_cardnum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/putao_transparent"
            android:digits="1234567890"
            android:gravity="center_vertical"
            android:hint="@string/putao_hotelpay_cardnum_hint"
            android:inputType="number"
            android:singleLine="true"
            android:textColorHint="@color/putao_text_color_second_alpha"
            android:textSize="16sp" />
    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="@dimen/putao_divider_line_size"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        layout="@layout/putao_line_view_divide" />

    <LinearLayout
        android:id="@+id/hotel_pay_securitycode_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/putao_hotle_item_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="@string/putao_hotelpay_securitycode"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/hotel_pay_securitycode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/putao_transparent"
            android:digits="1234567890"
            android:gravity="center_vertical"
            android:hint="@string/putao_hotelpay_securitycode_hint"
            android:inputType="number"
            android:maxLength="3"
            android:singleLine="true"
            android:textColorHint="@color/putao_text_color_second_alpha"
            android:textSize="16sp" />
    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="@dimen/putao_divider_line_size"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        layout="@layout/putao_line_view_divide" />

    <LinearLayout
        android:id="@+id/hotel_pay_validity_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/putao_hotle_item_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="@string/putao_hotelpay_validity"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hotel_pay_validity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/putao_hotelpay_validity_hint"
            android:textColor="@color/putao_text_color_second_alpha"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/putao_hotelpay_cardpeople_hint"
            android:textColor="@color/putao_text_color_second"
            android:textSize="@dimen/putao_tag_group_text_size" />

        <include
            android:layout_width="fill_parent"
            android:layout_height="@dimen/putao_divider_line_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            layout="@layout/putao_line_view_divide" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hotel_pay_name_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/putao_hotle_item_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="@string/putao_hotelpay_name"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/hotel_pay_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/putao_transparent"
            android:gravity="center_vertical"
            android:hint="@string/putao_hotelpay_name_hint"
            android:singleLine="true"
            android:textColorHint="@color/putao_pt_deep_gray"
            android:textSize="16sp" />
    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="@dimen/putao_divider_line_size"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        layout="@layout/putao_line_view_divide" />

    <LinearLayout
        android:id="@+id/hotel_pay_mobile_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/putao_hotle_item_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="@string/putao_hotelpay_mobile"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/hotel_pay_mobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/putao_transparent"
            android:digits="1234567890"
            android:gravity="center_vertical"
            android:hint="@string/putao_hotelpay_mobile_hint"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true"
            android:textColorHint="@color/putao_pt_deep_gray"
            android:textSize="16sp" />
    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="@dimen/putao_divider_line_size"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        layout="@layout/putao_line_view_divide" />

    <LinearLayout
        android:id="@+id/hotel_pay_certificate_type_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/putao_hotle_item_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="@string/putao_hotelpay_certificate_type"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hotel_pay_certificate_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/putao_hotelpay_certificate_type_hint"
            android:textColor="@color/putao_text_color_second_alpha"
            android:textSize="16sp" />
    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="@dimen/putao_divider_line_size"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        layout="@layout/putao_line_view_divide" />

    <LinearLayout
        android:id="@+id/hotel_pay_certificate_num_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/putao_hotle_item_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="@string/putao_hotelpay_certificate_num"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/hotel_pay_certificate_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/putao_transparent"
            android:gravity="center_vertical"
            android:hint="@string/putao_hotelpay_certificate_num_hint"
            android:singleLine="true"
            android:textColorHint="@color/putao_text_color_second_alpha"
            android:textSize="16sp" />
    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="@dimen/putao_divider_line_size"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        layout="@layout/putao_line_view_divide" />

    <LinearLayout
        android:id="@+id/hotel_pay_money_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/putao_hotle_item_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="@string/putao_hotelpay_pay_money_hint"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hotel_pay_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/putao_hoteldetail_money"
            android:textSize="16sp" />
    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="@dimen/putao_divider_line_size"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        layout="@layout/putao_line_view_divide" />

    <Button
        android:id="@+id/hotel_pay_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/putao_hotelpay_pay"
        android:textColor="@color/putao_white"
        android:textSize="@dimen/putao_express_item_text_size" />

</LinearLayout>